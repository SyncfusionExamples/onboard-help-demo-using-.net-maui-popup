<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OnBoardHelpDemo"
             x:Class="OnBoardHelpDemo.SwipingView">
    <ContentView.Content>
        <StackLayout
            Margin="10,0,0,0"
            VerticalOptions="Center"
            HorizontalOptions="Start">
            <StackLayout.Behaviors>
                <local:SwipingBehavior/>
            </StackLayout.Behaviors>
            <Label Text="slide to open SwipeView" TextColor="White" HorizontalOptions="Center" 
   FontFamily="Satisfy-Regular"/>
            <Image Source="{Binding SwipingIllustrationImage}" HeightRequest="50"
               WidthRequest="50"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>
